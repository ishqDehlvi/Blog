{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@lib/*": ["src/lib/*"],
            "@assets/*": ["src/assets/*"],
            "@styles/*": ["src/styles/*"]
        }
    },
    "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
